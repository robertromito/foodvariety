{
    "name": "foodvariety",
    "version": "1.0.0",
    "scripts": {
        "system": "docker-compose up",
        "build": "npm run build:ui && npm run build:backend && npm run build:docker",
        "build:ui": "rollup -c",
        "build:backend": "./gradlew clean build",
        "build:docker": "docker-compose build",
        "dev": "npm run stack:up && concurrently \"npm run dev:ui\" \"npm run dev:backend\"",
        "dev:ui": "rollup -c -w",
        "dev:backend": "./gradlew bootRunLocal",
        "start": "sirv src/main/resources/static",
        "stack:up": "docker-compose up -d db",
        "stack:clean": "docker-compose down && docker volume rm foodvariety_db_data",
        "db:connect": "mysql -h 127.0.0.1 -D foodvariety -u foodvariety -pfoodvariety"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^16.0.0",
        "@rollup/plugin-node-resolve": "^10.0.0",
        "concurrently": "^5.3.0",
        "rollup": "^2.3.4",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^3.0.0"
    },
    "dependencies": {
        "sirv-cli": "^1.0.0"
    }
}
